<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Score_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_board"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/player1_score"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Score_board" />

    <TextView
        android:id="@+id/player2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/player2_score"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Score_board" />

    <Button
        android:id="@+id/btn00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <Button
        android:id="@+id/btn01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button" />

    <Button
        android:id="@+id/btn02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="btn00,btn01,btn02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1TV" />

    <Button
        android:id="@+id/btn10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <Button
        android:id="@+id/btn11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <Button
        android:id="@+id/btn12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="btn10,btn11,btn12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow" />

    <Button
        android:id="@+id/btn22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <Button
        android:id="@+id/btn21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <Button
        android:id="@+id/btn20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="@dimen/text_size"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:foreground="@drawable/border_button"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="btn20,btn21,btn22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow2" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/reset_game"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow3"
        android:backgroundTint="#5C5C5C"/>


</androidx.constraintlayout.widget.ConstraintLayout>